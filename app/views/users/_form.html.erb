<%= simple_form_for @user, wrapper: :horizontal_form do |f| %>
  <%= render partial: 'alerts/validation_errors', locals: { f: f } %>

  <fieldset>
    <legend>User Profile</legend>
    <%= f.input :first_name, as: :string, hint: I18n.t('activerecord.attributes.user.first_name_hint') %>
    <%= f.input :last_name, as: :string %>
    <%= f.input :email, as: :email %>
    <%= f.input :role_id, as: (current_user.internal? ? :select : :show), collection: Role.role_collection(current_user) %>
    <%#= f.input :role_id, as: :check_boxes, collection: Role.role_collection(current_user) %>
    <%#= f.input :role_id, as: :radio_buttons, collection: Role.role_collection %>
  </fieldset>

  <% if %w(create new).include?(action_name) %>
    <fieldset>
      <legend>Password</legend>
      <%= f.input :password, as: :password, hint: I18n.t('activerecord.attributes.user.password_hint'), required: true %>
      <%= f.input :password_confirmation, as: :password, required: true %>
    </fieldset>
  <% end %>

  <%= f.button :submit unless action_name == 'show' %>

<% end %>
